<% layout('layouts/boilerplate.ejs') -%>
<body>
    <style>
        .filters{
            display: flex;
            align-items: center;
        }

        .filter{
            padding: 1rem;
            /* width: 100px; */
            text-align: center;
            opacity: 0.7;
        }

        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }

        .tax-info {
                display: none;
                font-size: 0.85rem;
                color: gray;

            }
        
        .tax-toggle{
            border: 1px solid rgb(85, 82, 82);
            border-radius: 10px;
            color: rgb(85, 82, 82);
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            margin: 1rem;
            margin-left: 5rem;
            
        }

        
    </style>
    <div class="filters">
        <div class="filter">
            <i class="fa-solid fa-fire"></i>
            <p>Trending</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-mountain"></i>
            <p>Mountains</p>
          </div>
          <div class="filter">
            <i class="fa-solid fa-umbrella-beach"></i>
            <p>Beaches</p>
          </div>
          <div class="filter">
            <i class="fa-solid fa-city"></i>
            <p>Cities</p>
          </div>
          <div class="filter">
            <i class="fa-solid fa-tree"></i>
            <p>Forests</p>
          </div>
          <div class="filter">
            <i class="fa-solid fa-snowflake"></i>
            <p>Snow</p>
          </div>
          <div class="filter">
            <i class="fa-solid fa-monument"></i>
            <p>Historical</p>
          </div>
          <div class="filter">
            <i class="fa-solid fa-person-swimming"></i>
            <p>Pool</p>
          </div>
          <div class="filter">
            <i class="fa-solid fa-house"></i>
            <p>Villa</p>
          </div>

          <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Total after adding tax</label>
              </div>
          </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2">
        <% for(let listing of listings){ %>
            <a class="all-listing" href="/listings/<%= listing.id %>">
                <div class="card col card-listing" >
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 18rem;">
        
                    <div class="card-body mb-3">
                      <p class="card-text">
                        <b><%= listing.title %></b>
                        
                        &#8377;<%= listing.price.toLocaleString("en-IN") %>
                        <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
    
    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault");
        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for(info of taxInfo){
                if(info.style.display != "inline"){
                    info.style.display = "inline";
                } else{
                    info.style.display = "none";
                }
            }
        });
    </script>

</body>

